# Copy this file to .env and fill in your values

# Database URL (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:///./ophth_ai.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/ophth_ai

# AI Model Settings
MODEL_NAME=OctoMed/OctoMed-7B
LOAD_MODEL_ON_STARTUP=true  # Set to false to lazy load model on first request

# Debug mode
DEBUG=true

# CORS Origins (comma-separated for multiple origins)
# CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]
